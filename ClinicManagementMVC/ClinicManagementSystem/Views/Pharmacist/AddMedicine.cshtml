@model ClinicManagementSystem.Models.Medicine

<h2>Add Medicine</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        <label>Medicine Name</label>
        @Html.TextBoxFor(m => m.MedicineName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Description</label>
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Medicine Type</label>
        @Html.DropDownListFor(m => m.MedicineTypeId,
        (SelectList)ViewBag.MedicineTypes,
        "--Select Type--",
        new { @class = "form-control" })
</div>

<div class="form-group">
    <label>Price</label>
    @Html.TextBoxFor(m => m.Price,
        new { @class = "form-control", type = "number", step = "0.01" })
</div>

<div class="form-group">
    <label>Quantity</label>
    @Html.TextBoxFor(m => m.QuantityStock,
        new { @class = "form-control", type = "number" })
</div>

<br />
<button type="submit" class="btn btn-primary">Save</button>
}