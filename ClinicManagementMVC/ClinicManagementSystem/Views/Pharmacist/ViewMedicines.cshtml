@model List<Medicine>

@{
    ViewData["Title"] = "Medicines";
    Layout = "~/Views/Shared/PharmacistNav.cshtml";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2>Medicines Inventory</h2>
        </div>
        <div class="col text-end">
            <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addMedicineModal">
                <i class="fas fa-plus"></i> Add Medicine
            </button>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <table class="table table-bordered table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Medicine Name</th>
                                <th>Type</th>
                                <th>Price (₹)</th>
                                <th>Stock</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.MedicineId</td>
                                        <td>@item.MedicineName</td>
                                        <td>@item.MedicineTypeName</td>
                                        <td>₹ @item.Price.ToString("N2")</td>
                                        <td>@item.QuantityStock</td>
                                        <td>
                                            @if (item.QuantityStock > 10)
                                            {
                                                <span class="badge bg-success">In Stock</span>
                                            }
                                            else if (item.QuantityStock > 0)
                                            {
                                                <span class="badge bg-warning">Low Stock</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Out of Stock</span>
                                            }
                                        </td>
                                        <td>
                                            <button class="btn btn-primary btn-sm edit-btn"
                                                    data-id="@item.MedicineId"
                                                    data-name="@item.MedicineName"
                                                    data-description="@item.Description"
                                                    data-typeid="@item.MedicineTypeId"
                                                    data-price="@item.Price"
                                                    data-stock="@item.QuantityStock">
                                                <i class="fas fa-edit">Edit</i>
                                            </button>
                                            <button class="btn btn-danger btn-sm delete-btn"
                                                    data-id="@item.MedicineId"
                                                    data-name="@item.MedicineName">
                                                <i class="fas fa-trash">Delete</i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center text-muted py-4">
                                        No medicines found
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Medicine Modal -->
<div class="modal fade" id="addMedicineModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">Add New Medicine</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="AddMedicine" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Medicine Name</label>
                            <input name="MedicineName" class="form-control" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Medicine Type</label>
                            <select name="MedicineTypeId" class="form-select" asp-items="ViewBag.MedicineTypes" required>
                                <option value="">-- Select Type --</option>
                            </select>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea name="Description" class="form-control" rows="2"></textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Price (₹)</label>
                            <input name="Price" type="number" step="0.01" min="0" class="form-control" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Initial Stock</label>
                            <input name="QuantityStock" type="number" min="0" class="form-control" required />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Save Medicine</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Medicine Modal -->
<div class="modal fade" id="editMedicineModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Edit Medicine</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="EditMedicine" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="MedicineId" id="edit_MedicineId" />
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Medicine Name</label>
                            <input name="MedicineName" id="edit_MedicineName" class="form-control" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Medicine Type</label>
                            <select name="MedicineTypeId" id="edit_MedicineTypeId" class="form-select" asp-items="ViewBag.MedicineTypes" required>
                                <option value="">-- Select Type --</option>
                            </select>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea name="Description" id="edit_Description" class="form-control" rows="2"></textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Price (₹)</label>
                            <input name="Price" id="edit_Price" type="number" step="0.01" min="0" class="form-control" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Stock</label>
                            <input name="QuantityStock" id="edit_QuantityStock" type="number" min="0" class="form-control" required />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Update Medicine</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Edit button click
            $('.edit-btn').click(function() {
                var id = $(this).data('id');
                var name = $(this).data('name');
                var description = $(this).data('description');
                var typeId = $(this).data('typeid');
                var price = $(this).data('price');
                var stock = $(this).data('stock');

                $('#edit_MedicineId').val(id);
                $('#edit_MedicineName').val(name);
                $('#edit_Description').val(description);
                $('#edit_MedicineTypeId').val(typeId);
                $('#edit_Price').val(price);
                $('#edit_QuantityStock').val(stock);

                $('#editMedicineModal').modal('show');
            });

            // Delete button click
            $('.delete-btn').click(function() {
                var id = $(this).data('id');
                var name = $(this).data('name');

                if (confirm('Are you sure you want to delete ' + name + '?')) {
                    $.ajax({
                        url: '@Url.Action("DeleteMedicine", "Pharmacist")',
                        type: 'POST',
                        data: { id: id },
                        success: function(response) {
                            if (response.success) {
                                alert('Medicine deleted successfully');
                                location.reload();
                            } else {
                                alert('Error: ' + response.message);
                            }
                        },
                        error: function() {
                            alert('An error occurred while deleting');
                        }
                    });
                }
            });
        });
    </script>
}