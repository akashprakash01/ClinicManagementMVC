@model ClinicManagementSystem.ViewModel.DispenseViewModel

@{
    ViewData["Title"] = "Dispense Medicine";
    Layout = "~/Views/Shared/PharmacistNav.cshtml";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2>Dispense Medicine</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-header bg-info text-white">
                    <h5>Prescription Details</h5>
                </div>
                <div class="card-body">
                    <p><strong>Prescription ID:</strong> @Model.PrescriptionId</p>
                    <p><strong>Patient:</strong> @Model.PatientName</p>
                    <p><strong>Doctor:</strong> @Model.DoctorName</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5>Prescribed Medicines</h5>
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>Medicine</th>
                                <th>Dosage</th>
                                <th>Frequency</th>
                                <th>Duration</th>
                                <th>Quantity</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.PrescribedMedicines)
                            {
                                <tr>
                                    <td>@item.MedicineName</td>
                                    <td>@item.Dosage</td>
                                    <td>@item.Frequency</td>
                                    <td>@item.Duration</td>
                                    <td>@item.Quantity</td>
                                    <td>
                                        @if (item.Status == 1)
                                        {
                                            <span class="badge bg-warning">Pending</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">Dispensed</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.Status == 1 )
                                        {
                                            <button class="btn btn-success btn-sm dispense-btn"
                                                    data-prescriptionmedicineid="@item.PrescriptionMedicineId"
                                                    data-medicinename="@item.MedicineName"
                                                    data-maxquantity="@item.Quantity">
                                                <i class="fas fa-check"></i> Dispense
                                            </button>
                                        }
                                        else if (item.Status == 0)
                                        {
                                            <span class="text-success">Dispensed</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    @if (Model.PrescribedMedicines.Any(x => x.Status == 0))
                    {
                        <div class="text-end mt-3">
                            <a asp-action="BillScreen"
                               asp-route-prescriptionId="@Model.PrescriptionId"
                               class="btn btn-primary">
                                Proceed to Bill
                            </a>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

<!-- Dispense Modal -->
<div class="modal fade" id="dispenseModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">Dispense Medicine</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="dispenseForm">
                <div class="modal-body">
                    <input type="hidden" id="prescriptionMedicineId" name="prescriptionMedicineId" />
                    <input type="hidden" id="pharmacyBillId" name="pharmacyBillId" value="@ViewBag.PharmacyBillId" />

                    <div class="mb-3">
                        <label class="form-label">Medicine Name</label>
                        <input type="text" id="medicineName" class="form-control" readonly />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Quantity to Dispense</label>
                        <input type="number" id="quantity" name="quantity" class="form-control" min="1" required />
                        <small class="text-muted">Max quantity: <span id="maxQuantity"></span></small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Dispense</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.dispense-btn').click(function() {
                var prescriptionMedicineId = $(this).data('prescriptionmedicineid');
                var medicineName = $(this).data('medicinename');
                var maxQuantity = $(this).data('maxquantity');

                $('#prescriptionMedicineId').val(prescriptionMedicineId);
                $('#medicineName').val(medicineName);
                $('#maxQuantity').text(maxQuantity);
                $('#quantity').attr('max', maxQuantity);

                $('#dispenseModal').modal('show');
            });

            $('#dispenseForm').submit(function(e) {
                e.preventDefault();

                var formData = {
                    prescriptionMedicineId: $('#prescriptionMedicineId').val(),
                    quantity: $('#quantity').val(),
                    pharmacyBillId: $('#pharmacyBillId').val()
                };

                $.ajax({
                    url: '@Url.Action("DispenseMedicine", "Pharmacist")',
                    type: 'POST',
                    data: JSON.stringify(formData),
                    contentType: 'application/json',
                    success: function(response) {
                        if (response.success) {
                            alert('Medicine dispensed successfully!');
                            location.reload();
                        } else {
                            alert('Error: ' + response.message);
                        }
                    },
                    error: function() {
                        alert('An error occurred while dispensing medicine.');
                    }
                });
            });
        });
    </script>
}