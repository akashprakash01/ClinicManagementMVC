@model ClinicManagementSystem.Models.LabTestResultVM

@{
    Layout = "~/Views/Shared/CommonLayout.cshtml";
}

<div class="container mt-4">

    <div class="card shadow-lg">
        <div class="card-body">

            <h3 class="text-warning">✏ Edit Lab Test Result</h3>
            <hr />

            <form asp-action="EditResult" method="post">

                <input type="hidden" asp-for="LabTestResultId" />

                <div class="mb-3">
                    <label class="form-label">Result</label>
                    <textarea asp-for="Result"
                              class="form-control"
                              rows="4"
                              required>
                    </textarea>
                </div>

                <button type="submit" class="btn btn-warning w-100">
                    Update Result
                </button>

            </form>

        </div>
    </div>

</div>