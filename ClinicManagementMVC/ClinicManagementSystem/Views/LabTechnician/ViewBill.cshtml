@model ClinicManagementSystem.Models.PrescriptionLabBillVM
@{
    Layout = "~/Views/Shared/LabtechnicianNav.cshtml";
}

<div class="container mt-5" id="printArea">
    <div class="card shadow p-4">

        <!-- Clinic Header -->
        <div class="text-center mb-4">
            <h2 class="text-primary">Medicare</h2>
            <p class="mb-0">Address Kazhakuttam, Thiruvananthapuram,Kerala</p>
            <p class="mb-0">Phone: +91-8983457123 | Email: medicare@gmail.com</p>
            <hr />
        </div>

        <!-- Patient Info -->
        <div class="row mb-3">
            <div class="col-md-6">
                <p><strong>Patient Name:</strong> @Model.PatientName</p>
            </div>
            <div class="col-md-3">
                <p><strong>Date:</strong> @DateTime.Now.ToString("dd/MM/yyyy")</p>
            </div>
            <div class="col-md-3 text-end">
                <p><strong>Bill No:</strong> LAB-@Model.PrescriptionId</p>
            </div>
        </div>

        <!-- Test Table -->
        <table class="table table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Test Name</th>
                    <th>Result</th>
                    <th>Amount (₹)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var test in Model.Tests)
                {
                    <tr>
                        <td>@test.LabTestName</td>
                        <td>@test.Result</td>
                        <td>@test.Amount</td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Total -->
        <div class="row mt-3">
            <div class="col text-end">
                <h4>Total: ₹ @Model.GrandTotal</h4>
            </div>
        </div>

        <!-- Footer -->
        <div class="row mt-5">
            <div class="col text-end">
                <p>Authorized Signature: ______________________</p>
            </div>
        </div>
    </div>
</div>

<!-- Print Button (hidden in print) -->
<div class="text-center mt-3 no-print">
    <button onclick="window.print()" class="btn btn-dark">
        Print Bill
    </button>
</div>

<style>
    @@media print {
        body *

    {
        visibility: hidden;
    }

    #printArea, #printArea * {
        visibility: visible;
    }

    #printArea {
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
    }

    .no-print, .navbar, header {
        display: none !important;
    }

    }
</style>
