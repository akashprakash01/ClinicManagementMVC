@model ClinicManagementSystem.Models.PrescriptionLabBillVM

@{
    Layout = "~/Views/Shared/LabtechnicianNav.cshtml";
}

<style>
    @@media print {

        body * {
            visibility: hidden;
        }

        #printArea, #printArea * {
            visibility: visible;
        }

        #printArea {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
        }

        .no-print {
            display: none;
        }

        .navbar, header {
            display: none !important;
        }
    }
</style>

<div id="printArea" class="container mt-5">
    <div class="card shadow p-4">

        <h2 class="text-primary text-center">Lab Report & Bill</h2>
        <hr />

        <p><strong>Patient:</strong> @Model.PatientName</p>

        <table class="table table-bordered mt-3">
            <thead class="table-dark">
                <tr>
                    <th>Test Name</th>
                    <th>Result</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var test in Model.Tests)
                {
                    <tr>
                        <td>@test.LabTestName</td>
                        <td>@test.Result</td>
                        <td>₹ @test.Amount</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-end mt-3">
            <h4>Total: ₹ @Model.GrandTotal</h4>
        </div>

    </div>
</div>

<div class="text-center mt-3 no-print">
    <button onclick="window.print()" class="btn btn-dark">
        Print Bill
    </button>
</div>