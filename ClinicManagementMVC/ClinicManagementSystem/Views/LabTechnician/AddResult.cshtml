@model ClinicManagementSystem.Models.LabTestResultVM;

@{
    Layout = "~/Views/Shared/CommonLayout.cshtml";
}

<div class="container mt-4">

    <div class="card shadow-lg">
        <div class="card-body">

            <h3 class="text-primary">🧪 Add Lab Test Result</h3>
            <hr />

            <form asp-action="AddResult" method="post">

                <input type="hidden" asp-for="PrescriptionLabTestId" />

                <div class="mb-3">
                    <label class="form-label">Total Amount</label>
                    <input asp-for="TotalAmount"
                           class="form-control"
                           readonly />
                </div>

                <div class="mb-3">
                    <label class="form-label">Result</label>
                    <textarea asp-for="Result"
                              class="form-control"
                              rows="4"
                              required>
        </textarea>
                </div>

                <button type="submit" class="btn btn-success w-100">
                    Save Result
                </button>

            </form>

        </div>
    </div>

</div>